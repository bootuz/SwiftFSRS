{
    "swift.sourcekit-lsp.backgroundIndexing": "on",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "files.exclude": {
        "**/.build": true,
        "**/DerivedData": true
    },    
    "swiftlint.onlyEnableOnSwiftPMProjects": true,
    "swiftlint.autoLintWorkspace": true,
    "swiftlint.additionalParameters": ["--fix"],
}