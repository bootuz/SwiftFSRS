{
    "swift.sourcekit-lsp.backgroundIndexing": "on",
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "files.exclude": {
        "**/.build": true,
        "**/DerivedData": true
    },    
    "swiftlint.autoLintWorkspace": true,
    "swiftlint.configFile": ".swiftlint.yml",
    "swiftlint.onlyEnableOnSwiftPMProjects": true
}